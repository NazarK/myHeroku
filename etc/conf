export SERVER=adviser
export PATH_ON_SERVER=/root/enliken-suggestions

if [ -z "$WORKERS_COUNT" ]; then
  export WORKERS_COUNT=1
else
  echo "using predefined WORKERS_COUNT=$WORKERS_COUNT (.bash_profile?)"
fi

if [ -z "$SERVER_ENV" ]; then
  export SERVER_ENV=digitalocean
fi

if [ -z "$SERVER_PORT" ]; then
  export SERVER_PORT=80
fi

export REPO=github
export USERNAME_ON_SERVER=root
